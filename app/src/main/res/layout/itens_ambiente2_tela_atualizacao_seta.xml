<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:onClick="clickTela"
    tools:context=".guis.tela_ambientes.automatos.telas_aux.ItemTelaAtualizacaoSeta">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:onClick="clickTelaMeio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CC000000"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:text="Atualização de uma Seta"
            android:textColor="#ffffff"/>

        <EditText
            android:id="@+id/id_atualizacao_seta_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_customizado2"
            android:gravity="top"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_aux_atualizacao_seta_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Símbolo do alfabeto..."
            android:gravity="top"
            android:padding="5dp"
            android:textColor="#66ffffff"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Obs: Separe os símbolos por vírgula (,). Use 'e' para transições vazias."
            android:gravity="top"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintVertical_bias="0.65"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/id_atualizacao_seta_remover"
            android:onClick="clickRemover"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/botao_customizado"
            android:text="Remover"
            android:textSize="18dp"
            android:gravity="center"
            android:padding="10dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/id_atualizacao_seta_confirmacao"
            android:onClick="clickConfirmacao"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/botao_customizado"
            android:text="Confirmar"
            android:textSize="18dp"
            android:gravity="center"
            android:padding="10dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>