<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autômato Play"
        android:gravity="center"
        android:layout_marginHorizontal="15dp"
        android:textColor="#000"
        android:layout_marginTop="40dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="35dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:onClick="clickBotaoAutomatosDeterministicos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Autômato Determinístico"
            android:gravity="center"
            android:layout_marginHorizontal="15dp"
            android:textColor="#fff"
            android:background="@drawable/botao_com_sombra"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:onClick="clickBotaoAutomatosNaoDeterministicos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Autômato Não-Determinístico"
            android:gravity="center"
            android:layout_marginHorizontal="15dp"
            android:textColor="#fff"
            android:background="@drawable/botao_com_sombra"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:onClick="clickBotaoExpressoesRegulares"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Expressão Regular"
            android:gravity="center"
            android:layout_marginHorizontal="15dp"
            android:textColor="#fff"
            android:background="@drawable/botao_com_sombra"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:onClick="clickBotaoOpcoes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Opções"
            android:gravity="center"
            android:layout_marginHorizontal="15dp"
            android:textColor="#fff"
            android:background="@drawable/botao_com_sombra"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>