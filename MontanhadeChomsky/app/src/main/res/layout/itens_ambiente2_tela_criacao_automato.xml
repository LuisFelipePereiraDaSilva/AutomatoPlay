<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:onClick="clickTela"
    tools:context=".guis.tela_ambientes.automatos.telas_aux.ItemTelaCriacaoAutomato">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:onClick="clickTelaMeio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CC000000"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:text="Criação de um Estado"
            android:textColor="#ffffff"/>

        <EditText
            android:id="@+id/id_criacao_automato_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_customizado2"
            android:gravity="top"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_aux_criacao_automato_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nome..."
            android:gravity="top"
            android:padding="5dp"
            android:textColor="#66ffffff"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/id_criacao_automato_estado_inicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Estado Inicial"
            android:paddingRight="10dp"
            android:paddingLeft="5dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            app:layout_constraintVertical_bias="0.45"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <CheckBox
            android:id="@+id/id_criacao_automato_estado_aceitacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Estado de Aceitação"
            android:paddingRight="10dp"
            android:paddingLeft="5dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            app:layout_constraintVertical_bias="0.75"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/id_criacao_automato_confirmacao"
            android:onClick="clickConfirmacao"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botao_customizado"
            android:text="Confirmar"
            android:textSize="18dp"
            android:gravity="center"
            android:padding="10dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>